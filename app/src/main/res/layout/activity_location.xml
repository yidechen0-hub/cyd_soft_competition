<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <!-- 视频播放器 -->
    <VideoView
        android:id="@+id/vv_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />


    <!-- 用 ImageView 显示图标，点击效果和 Button 一致 -->
    <TextView
        android:id="@+id/tv_location"
        android:fontFamily="MiSans"
        android:text="你在三个国家，25个城市"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:scaleType="centerInside"
        android:background="?attr/selectableItemBackground"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_location2"
        android:text="照片记录下了你的足迹"
        android:fontFamily="MiSans"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:scaleType="centerInside"
        android:background="?attr/selectableItemBackground"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/tv_location3"
        android:text="这些风景也留下了你"
        android:fontFamily="MiSans"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:scaleType="centerInside"
        android:background="?attr/selectableItemBackground"
        android:visibility="invisible" />

</RelativeLayout>