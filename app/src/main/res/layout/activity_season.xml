<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:padding="0dp"
    android:overScrollMode="never">

    <!-- 底图容器：RelativeLayout 高度跟随 iv_background 原始大小 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <!-- 新增：全屏背景层（专门用于填充屏幕，与 iv_background 同图） -->
        <ImageView
            android:id="@+id/iv_full_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_season"
            android:scaleType="fitXY"
            android:adjustViewBounds="false"
            android:elevation="-1dp"
            android:contentDescription="@string/background_image" />

        <!-- 原 iv_background：保留原始大小，仅作为定位基准（透明化） -->
<!--        <ImageView-->
<!--            android:id="@+id/iv_background"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/bg_season"-->
<!--            android:alpha="0.0"-->
<!--            android:contentDescription="@string/background_image" />-->

        <!-- 所有控件：仍基于原 iv_background 定位，位置完全不变 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_full_background"
            android:layout_alignEnd="@+id/iv_full_background"
            android:layout_marginTop="358dp"
            android:layout_marginEnd="20dp"
            android:text="春天，是万物复苏的生机"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <com.cyd.cyd_soft_competition.mask.MaskImageView
            android:id="@+id/mask_spring"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/iv_full_background"
            android:layout_alignTop="@+id/iv_full_background"
            android:layout_marginStart="3dp"
            android:layout_marginTop="402dp"
            android:background="#f0f0f0" />

        <ImageView
            android:id="@+id/iv_spring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/background_image"
            android:scaleType="fitXY"
            android:layout_alignStart="@+id/mask_spring"
            android:layout_below="@+id/mask_spring"
            android:src="@drawable/bg_season" />

    </RelativeLayout>

</ScrollView>