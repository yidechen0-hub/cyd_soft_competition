<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- 季节标题文本 -->
    <TextView
        android:id="@+id/tv_season_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:text="春天，是万物复苏的生机"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- MaskImageView 用于显示带遮罩的季节照片 -->
    <com.cyd.cyd_soft_competition.mask.MaskImageView
        android:id="@+id/mask_season"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp" />

    <!-- 季节照片 -->
    <ImageView
        android:id="@+id/iv_season"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/background_image"
        android:scaleType="fitXY"
        android:src="@drawable/bg_season" />

</LinearLayout>
